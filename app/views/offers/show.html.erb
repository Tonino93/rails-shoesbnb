<div class="container">
  <div class="boite">
  <h2 class="offer"> <%=  @offer.name %></h2> <!-- il faut ajouter un nom a notre offer !!! -->
  <div class=" d-flex justify-content-around align-items-center ">
    <div class="section">
      <%= cl_image_tag @offer.photo, height: 400, width: 400, crop: :fill %>
    </div>
    <div class="section">
      <ul>
        <li>Brand : <%= @offer.brand %></li>
        <li>Category : <%= @offer.category %></li>
        <li>Size : <%= @offer.size %></li>
        <li>Color : <%= @offer.color %></li>
        <li>Description : <br> <%= @offer.description %></li>
      </ul>
    </div>

    <div class="section ">
      <div class="d-flex align-items-center ">
      <h4><%= @offer.user.username %></h4>
      <%= cl_image_tag @offer.user.photo, class: "avatar-offer" %>
      </div>
      <h3 >Price : <%= @offer.price_per_day %> per day</h3>
      <%= render "bookings/form", booking: @booking %>
    </div>
  </div>
  <div class=" d-flex justify-content-center">
    <%= link_to "Back to list", offers_path, class: 'btn btn-primary btn-lg'%>
  </div>
</div>
</div>

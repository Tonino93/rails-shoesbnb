<div class="container">
  <div class="boite">
  <h2> <%=  @offer.description %></h2> <!-- il faut ajouter un nom a notre offer !!! -->
  <div class=" d-flex justify-content-around align-items-center ">
    <div class="section">
      <%= cl_image_tag @offer.photo, height: 400, width: 400, crop: :fill %>
    </div>
    <div class="section">
      <ul>
        <li>Brand : <%= @offer.brand %></li>
        <li>Category : <%= @offer.category %></li>
        <li>Size : <%= @offer.size %></li>
        <li>Color : <%= @offer.color %></li>
        <li>Description : <br> <%= @offer.description %></li>
      </ul>
    </div>
    <div class="section">
      <div class="d-flex ">
      <%= cl_image_tag current_user.photo, class: "avatar-offer" %>
      <h4><%= current_user.username %></h4>
      </div>
      <h3 class="btn btn-lg btn-success">Price : <%= @offer.price_per_day %> per day</h3>
      <%= render "bookings/form", booking: @booking %>
    </div>
  </div>
  <div class=" d-flex justify-content-center">
    <%= link_to "Back to list", offers_path, class: 'btn btn-primary'%>
  </div>
</div>
</div>
<!-- Mettre sur le dasboard -->
<% if(@offer.user == current_user) %>
<%= link_to "Update", edit_offer_path, class: 'btn btn-primary'%>
<%= link_to "Delete", offer_path, method: :delete, data: { confirm: "Sur to delete?" }, class: 'btn btn-primary'%>
<% end %>

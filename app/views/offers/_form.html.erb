<%= simple_form_for(@offer) do |f| %>
  <%= f.input :name %>
  <%= f.input :brand %>
  <%= f.input :description %>
  <%= f.input :category, collection: Offer::CATEGORIES %>
  <%= f.input :size %>
  <%= f.input :color %>
  <%= f.input :price_per_day %>
  <%= f.input :address %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit, class: "btn btn-block" %>
<% end %>

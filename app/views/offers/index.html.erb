<div class="container ">
  <h2>Notre selection du jour</h2>
  <div class="d.flex">
     <div class="row justify-content-between">
    <div class="card-shoes col-8 border-rounded ">
        <% @offers.each do |offer| %>
      <%= link_to (cl_image_tag offer.photo, height: 200, width: 200, crop: :fill), offer_path(offer) %>
      <% end %>
    </div>
    <div class="col-4" id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
  </div>
</div>

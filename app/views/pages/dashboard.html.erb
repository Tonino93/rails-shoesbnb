<div id="container">

  <div class=""><h1>Bienvenue <%= current_user.username %></h1></div>
  <div class="flexbox">
    <div class="box">
        <p>ALL BOOKINGS</p>
        <h2>Ce que je loue</h2>
          <% @offers.each do |offer|%>
          <li><%= link_to (cl_image_tag offer.photo, height: 200, width: 200, crop: :fill), offer_path(offer) %></li>
          <% end %>
    </div>

    <div class="box" >
        <p>MY BOOKINGS</p>
        <h2>Ce qu'on réserve</h2>
        <% @bookings.each do |booking|%>
          <li><%= link_to (cl_image_tag booking.offer.photo, height: 200, width: 200, crop: :fill) %></li>
          Username : <li><%= booking.user.username %></li>
          Date de début
          <li><%= booking.start_date %></li>
          Date de fin
          <li><%= booking.end_date %></li>
        <% end %>
    </div>

    <div class="box" >
        <p>DEMAND BOOKINGS</p>
        <h2>Ce que je réserve</h2>
        <% @mybookings.each do |mybooking|%>
          <li><%= link_to (cl_image_tag mybooking.offer.photo, height: 200, width: 200, crop: :fill) %></li>
          <li><%= mybooking.user.username %></li>
          Date de début
          <li><%= mybooking.start_date %></li>
          Date de fin
          <li><%= mybooking.end_date %></li>
        <% end %>
    </div>
  </div>
</div>

